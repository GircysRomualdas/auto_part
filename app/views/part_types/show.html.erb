<div>
  <%= link_to "Back", :back, class: "btn btn-outline-secondary mb-2" %>
  <div>
    <div class="my-2">
      <%= render "part_types/search", path: part_type_path(@part_type), q: @q, part_type: @part_type %>
    </div>
    <% @car_parts.each do |car_part| %>
      <div class="card shadow-sm my-3">
        <%= link_to car_part_path(car_part), class: "text-decoration-none text-dark" do %>
          <div class="row g-0">
            <div class="col-md-3">
              <div class="d-flex align-items-center justify-content-center h-100">
                <%= car_part.image.present? ? image_tag(car_part.image.variant(:medium), class: "img-fluid h-100 w-auto") : image_tag("https://via.placeholder.com/200", class: "img-fluid") %>
              </div>
            </div>
            <div class="col-md">
              <div class="card-body">
                <h5 class="card-title"><%= car_part.name %></h5>
                <div class="card-text">
                  <p><%= car_part.price %> â‚¬</p>
                  <p><%= car_part.part_type.name %></p>
                  <p><%= car_part.description %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="mt-4">
      <%= render "layouts/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>