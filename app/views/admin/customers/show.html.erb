<div>
  <%= button_to "", "#", onclick: "history.back(); return false;", class: "btn btn-outline-secondary mb-2 bi bi-arrow-left-circle" %>
  <div class="card shadow-sm p-4">
    <div class="d-flex justify-content-between">
      <h1 class="display-6">Customer Details</h1>
      <%= button_to "", admin_customer_path(@customer), method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "btn btn-danger bi bi-trash" %>
    </div>
    <div class="row g-4 mt-2">
      <div class="col-8">
        <div class="card shadow-sm p-4">
          <h5 class="text-center mb-3">Customer Information</h5>
          <div class="text-muted px-3">
            <div class="d-flex justify-content-between border-bottom my-1">
              <span class="fw-bold">Email</span>
              <span><%= @customer.email %></span>
            </div>
            <div class="d-flex justify-content-between border-bottom my-1">
              <span class="fw-bold">Created At</span>
              <span><%= @customer.created_at.strftime("%Y-%m-%d %H:%M") %></span>
            </div>
            <div class="d-flex justify-content-between border-bottom my-1">
              <span class="fw-bold">Last Updated At</span>
              <span><%= @customer.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
            </div>
            <div class="d-flex justify-content-between border-bottom my-1">
              <span class="fw-bold">Total Sign In Count</span>
              <span><%= @customer.sign_in_count %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="row row-cols-1 g-4">
          <div class="col">
            <div class="card shadow-sm p-4">
              <h5 class="text-center mb-3">Current Sign In Activity</h5>
              <div class="text-muted px-3">
                <div class="d-flex justify-content-between border-bottom my-1">
                  <span class="fw-bold">Sign In At</span>
                  <span><%= @customer.current_sign_in_at.present? ? @customer.current_sign_in_at.strftime("%Y-%m-%d %H:%M") : "N/A" %></span>
                </div>
                <div class="d-flex justify-content-between border-bottom my-1">
                  <span class="fw-bold">IP Addres</span>
                  <span><%= @customer.current_sign_in_ip.present? ? @customer.current_sign_in_ip : "N/A" %></span>
                </div>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card shadow-sm p-4">
              <h5 class="text-center mb-3">Last Sign In Activity</h5>
              <div class="text-muted px-3">
                <div class="d-flex justify-content-between border-bottom my-1">
                  <span class="fw-bold">Sign In At</span>
                  <span><%= @customer.last_sign_in_at.present? ? @customer.last_sign_in_at.strftime("%Y-%m-%d %H:%M") : "N/A" %></span>
                </div>
                <div class="d-flex justify-content-between border-bottom my-1">
                  <span class="fw-bold">IP Addres</span>
                  <span><%= @customer.last_sign_in_ip.present? ? @customer.last_sign_in_ip : "N/A" %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-4">
    <%= render "admin/customers/orders/table", path: admin_customer_path(@customer), q: @q, orders: @orders, pagy: @pagy %>
  </div>
</div>
