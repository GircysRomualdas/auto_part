<div class="card shadow-sm">
  <div class="card-body">
    <div class="my-2">
      <%= render "admin/customers/search", path: admin_customers_path, q: @q %>
    </div>
    <div class="mt-2 card">
      <table class="table table-hover border-top">
        <thead>
          <tr>
            <th><%= sort_link(@q, :email, "Email", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :created_at, "Created", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :updated_at, "Last Updated", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :current_sign_in_at, "Current Sign In", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :last_sign_in_at, "Last Sign In", class: "text-decoration-none text-black") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.email %></td>
              <td><%= customer.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= customer.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= customer.current_sign_in_at.present? ? customer.current_sign_in_at.strftime("%Y-%m-%d %H:%M") : "N/A" %></td>
              <td><%= customer.last_sign_in_at.present? ? customer.last_sign_in_at.strftime("%Y-%m-%d %H:%M") : "N/A" %></td>
              <td class="p-0 text-end align-middle"><%= link_to "View", admin_customer_path(customer), class: "btn btn-outline-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= render "layouts/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>