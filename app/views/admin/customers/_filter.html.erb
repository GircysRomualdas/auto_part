<%= search_form_for(q, url: path, method: :get) do |form| %>
  <div class="row g-3">
    <div class="col-md-6">
      <div class="card p-3">
        <h5 class="card-title text-center">Date Filters</h5>
        <div class="mb-3">
          <label class="form-label fw-bold">Created Range</label>
          <div class="input-group">
            <%= form.date_field :created_at_gteq, class: "form-control", placeholder: "From Date" %>
            <%= form.date_field :created_at_lteq, class: "form-control", placeholder: "To Date" %>
          </div>
        </div>
        <div>
          <label class="form-label fw-bold">Updated Range</label>
          <div class="input-group">
            <%= form.date_field :updated_at_gteq, class: "form-control", placeholder: "From Date" %>
            <%= form.date_field :updated_at_lteq, class: "form-control", placeholder: "To Date" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-3">
        <h5 class="card-title text-center">Sign In Filters</h5>
        <div class="mb-3">
          <label class="form-label fw-bold">Current Sign In</label>
          <div class="input-group">
            <%= form.date_field :current_sign_in_at_gteq, class: "form-control", placeholder: "From Date" %>
            <%= form.date_field :current_sign_in_at_lteq, class: "form-control", placeholder: "To Date" %>
          </div>
        </div>
        <div>
          <label class="form-label fw-bold">Last Sign In</label>
          <div class="input-group">
            <%= form.date_field :last_sign_in_at_gteq, class: "form-control", placeholder: "From Date" %>
            <%= form.date_field :last_sign_in_at_lteq, class: "form-control", placeholder: "To Date" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Clear Filter", admin_customers_path, class: "btn btn-outline-secondary me-2" %>
    <%= form.submit "Filter", class: "btn btn-primary" %>
  </div>
<% end %>