<div class="card shadow-sm">
  <div class="card-body">
    <div class="my-2">
      <%= render "admin/sellers/search", path: admin_sellers_path, q: @q %>
    </div>
    <div class="mt-2 card">
      <table class="table table-hover border-top">
        <thead>
          <tr>
            <th><%= sort_link(@q, :email, "Email", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :admin_email, "Admin", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :created_at, "Created", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :updated_at, "Last Updated", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :current_sign_in_at, "Current Sign In", class: "text-decoration-none text-black") %></th>
            <th><%= sort_link(@q, :last_sign_in_at, "Last Sign In", class: "text-decoration-none text-black") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @sellers.each do |seller| %>
            <tr>
              <td><%= seller.email %></td>
              <td><%= seller.admin.email %></td>
              <td><%= seller.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= seller.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= seller.current_sign_in_at.present? ? seller.current_sign_in_at.strftime("%Y-%m-%d %H:%M") : "N/A" %></td>
              <td><%= seller.last_sign_in_at.present? ? seller.last_sign_in_at.strftime("%Y-%m-%d %H:%M") : "N/A" %></td>
              <td class="p-0 text-end align-middle"><%= link_to "", admin_seller_path(seller), class: "btn btn-outline-secondary bi bi-eye" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= render "layouts/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>