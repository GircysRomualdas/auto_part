<%= search_form_for(q, url: path, method: :get) do |form| %>
  <div class="row">
    <div class="col-md-2">
      <h2 class="display-6">Your Cart</h2>
    </div>
    <div class="col-md">
      <div class="d-flex justify-content-end fs-5">
        <div class="ms-4 my-auto">
          <%= link_to "Order", root_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="input-group">
        <%= form.search_field :car_part_name_cont, class: "form-control", placeholder: "Search by car part" %>
        <button class="btn btn-primary" type="submit">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </div>
  </div>
  <div class="accordion" id="filtersAccordion">
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          <i class="bi bi-funnel fs-5"></i>
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#filtersAccordion">
        <div class="accordion-body bg-body-tertiary">
          <%= render "customer/carts/filter", path: path, q: q, part_types: part_types %>
        </div>
      </div>
    </div>
  </div>
<% end %>
